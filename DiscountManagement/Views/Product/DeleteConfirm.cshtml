@model DiscountManagement.Models.ProductDto
@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>DeleteConfirm</h2>

<h2>Are you sure you want to delete this Product?</h2>
<a href="/Product/List">Cancel</a>
<h3>Name: @Model.ProductName</h3>
<form action="/Product/Delete/@Model.ProductID" method="POST">
    <input type="submit" value="Confirm Delete" />
</form>